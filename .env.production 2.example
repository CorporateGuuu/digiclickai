# DigiClick AI Production Environment Variables

# Application
NODE_ENV=production
PORT=3000
NEXT_PUBLIC_APP_URL=https://digiclick.ai

# API Configuration
NEXT_PUBLIC_API_URL=https://api.digiclick.ai
API_TIMEOUT=30000

# Authentication
JWT_SECRET=your_jwt_secret
JWT_REFRESH_SECRET=your-super-secret-refresh-key-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
NEXT_PUBLIC_JWT_STORAGE_KEY=digiclick_ai_token

# Google OAuth
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-production-google-client-id

# Database
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/digiclick-ai
MONGO_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/digiclick-ai
MONGODB_DB_NAME=digiclick-ai

# Redis (for caching and sessions)
REDIS_URL=redis://<redis-host>:<port>
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password
EMAIL_FROM=noreply@digiclick.ai

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain
UPLOAD_DIR=./uploads
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Security
CORS_ORIGIN=https://digiclick.ai
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Monitoring
SENTRY_DSN=your-production-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-production-sentry-dsn

# Feature Flags
ENABLE_CHATBOT=true
ENABLE_FILE_UPLOAD=true
ENABLE_GOOGLE_AUTH=true
ENABLE_STRIPE_PAYMENTS=true

# Deployment
VERCEL_URL=https://digiclick.ai
RENDER_SERVICE_ID=your-render-service-id
RENDER_API_KEY=your-render-api-key

# Logging
LOG_LEVEL=info
DEBUG=digiclick:*
