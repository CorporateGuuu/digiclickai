# DigiClick AI Environment Variables

# Application
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
API_TIMEOUT=30000

# Authentication
JWT_SECRET=your_jwt_secret
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
NEXT_PUBLIC_JWT_STORAGE_KEY=digiclick_ai_token

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Database
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/digiclick-ai
MONGO_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/digiclick-ai
MONGODB_DB_NAME=digiclick-ai

# Redis (for caching and sessions)
REDIS_URL=redis://<redis-host>:<port>
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password
EMAIL_FROM=noreply@digiclick.ai

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain
UPLOAD_DIR=./uploads
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Feature Flags
ENABLE_CHATBOT=true
ENABLE_FILE_UPLOAD=true
ENABLE_GOOGLE_AUTH=true
ENABLE_STRIPE_PAYMENTS=true

# Development
DEBUG=digiclick:*
LOG_LEVEL=info

# Deployment
VERCEL_URL=
RENDER_SERVICE_ID=
RENDER_API_KEY=

# Custom Cursor Configuration
NEXT_PUBLIC_CURSOR_PERFORMANCE_MODE=high
NEXT_PUBLIC_CURSOR_TRAIL_LENGTH=20
NEXT_PUBLIC_CURSOR_SPEED_MULTIPLIER=1.0
NEXT_PUBLIC_CURSOR_DEBUG=false
NEXT_PUBLIC_ENABLE_PARTICLE_TRAILS=true
NEXT_PUBLIC_ENABLE_CLICK_EFFECTS=true
NEXT_PUBLIC_ENABLE_GLOW_EFFECTS=true
NEXT_PUBLIC_CURSOR_THEMES=default,minimal,neon,corporate
NEXT_PUBLIC_DEFAULT_CURSOR_THEME=default
NEXT_PUBLIC_CURSOR_HOT_RELOAD=true
