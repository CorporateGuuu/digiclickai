# DigiClick AI Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/digiclick-ai?retryWrites=true&w=majority
DB_NAME=digiclick-ai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://digiclick.ai,https://www.digiclick.ai

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
FROM_EMAIL=noreply@digiclick.ai
FROM_NAME=DigiClick AI

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000

# External APIs
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Security
COOKIE_SECRET=your-cookie-secret-key
SESSION_SECRET=your-session-secret-key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Health Check
HEALTH_CHECK_ENDPOINT=/health

# Admin Configuration
ADMIN_EMAIL=admin@digiclick.ai
ADMIN_PASSWORD=secure-admin-password

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key
